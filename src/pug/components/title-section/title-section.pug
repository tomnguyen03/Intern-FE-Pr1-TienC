mixin title-section(title,categoriesTitle)
  .title-section.d-flex.align-items-center.justify-content-between
    h2= title
    .title-button
      -if (categoriesTitle)
        .categories-title
          each item in categoriesTitle
            a(href="#").btn.btn__outline= item
      a(href="#") 
        i.bx.bxs-left-arrow
      a(href="#") 
        i.bx.bxs-right-arrow
